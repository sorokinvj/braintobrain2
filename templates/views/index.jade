extends ../layouts/default

block head
	meta(property="og:type",content="website")
	meta(property="og:url", content="http://braintobrain.ru")
	meta(property="og:title", content="Сила коллективного интеллекта")
	meta(property="og:description", content="Дизайн-мышление, стратегические и креативные сессии — мы помогаем командам быть успешными")
	meta(property="og:image", content="http://braintobrain.ru/images/fb_og.png")

block header	
	div(role="navigation").navbar.navbar-default
		.container: .row: .col-xs-12.col-sm-11.col-sm-offset-1.col-md-10.col-md-offset-1
			.navbar-header
				button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='/') 
					img#logo(src="/images/braintobrain_logo_on_w.svg")
			.collapse.navbar-collapse
				ul.nav.navbar-nav.navbar-right
					each link in navLinks
						li(class=(section == link.key ? 'active' : null)): a(href=link.href)= link.label


block content
	section(id="main_hero")
			.container: .row: .col-xs-12.col-lg-6.col-lg-offset-1.col-sm-8.col-sm-offset-1.col-md-7.col-md-offset-1
				h1#mainwrap
					|Привет, я&nbspВладислав
				h2#words 
					|В агентстве brain#[span(id="redarrows") »]to#[span(id="redarrows") »]brain я создаю методики для креативности и серьезных размышлений
					br
				h2#words2
					|Предприниматели и руководители обращаются в агентство за стратегическими сессиями, тренингами по креативности и сопровождением проектов по дизайн-мышлению 
